{
	"name": "speichr",
	"productName": "Speichr",
	"version": "1.0.2",
	"description": "Desktop operations studio for managing cache connections, workflows, observability, and incident exports.",
	"main": ".vite/build/main.js",
	"private": true,
	"scripts": {
		"start": "electron-forge start",
		"package": "electron-forge package",
		"make": "electron-forge make",
		"publish": "electron-forge publish",
		"lint": "eslint --ext .ts,.tsx .",
		"typecheck": "tsc --noEmit",
		"check:boundaries": "bun run scripts/ci/check-import-boundaries.ts",
		"check:migrations": "bun run scripts/ci/check-migration-integrity.ts",
		"check:release:readiness": "bun run scripts/ci/check-release-readiness.ts",
		"test": "bun run test:unit && bun run test:contract",
		"test:unit": "vitest run src/main/application/speichr-service.test.ts src/main/policies/read-only-policy.test.ts",
		"test:contract": "vitest run src/shared/schemas/ipc.test.ts src/renderer/features/common/ipc.test.ts",
		"test:provider": "vitest run src/main/infrastructure/providers/cache-gateway.test.ts src/main/infrastructure/providers/provider-engine-event-ingestor.test.ts",
		"test:migration": "vitest run src/main/persistence/sqlite.test.ts",
		"test:integration": "vitest run src/integration",
		"native:rebuild": "npm rebuild better-sqlite3",
		"test:integration:stable": "bun run native:rebuild && bun run test:integration",
		"test:smoke": "vitest run src/smoke",
		"test:watch": "vitest",
		"test:all": "vitest run"
	},
	"keywords": [
		"electron",
		"desktop",
		"cache",
		"memcached",
		"redis",
		"operations"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/jeheskielSunloy77/speichr.git"
	},
	"homepage": "https://github.com/jeheskielSunloy77/speichr#readme",
	"bugs": {
		"url": "https://github.com/jeheskielSunloy77/speichr/issues"
	},
	"author": {
		"name": "jeheskielSunloy77",
		"email": "jeheskielventiokysunloy@gmail.com"
	},
	"license": "MIT",
	"devDependencies": {
		"@electron-forge/cli": "^7.11.1",
		"@electron-forge/maker-deb": "^7.11.1",
		"@electron-forge/maker-squirrel": "^7.11.1",
		"@electron-forge/maker-zip": "^7.11.1",
		"@electron-forge/plugin-auto-unpack-natives": "^7.11.1",
		"@electron-forge/plugin-fuses": "^7.11.1",
		"@electron-forge/plugin-vite": "^7.11.1",
		"@electron/fuses": "^1.8.0",
		"@tailwindcss/vite": "^4.1.18",
		"@types/better-sqlite3": "^7.6.13",
		"@types/electron-squirrel-startup": "^1.0.2",
		"@types/keytar": "^4.4.2",
		"@types/memjs": "^1.3.3",
		"@types/react": "^19.2.14",
		"@types/react-dom": "^19.2.3",
		"@types/uuid": "^11.0.0",
		"@typescript-eslint/eslint-plugin": "^5.62.0",
		"@typescript-eslint/parser": "^5.62.0",
		"@vitejs/plugin-react": "^5.1.4",
		"@vitest/coverage-v8": "^4.0.18",
		"electron": "40.4.1",
		"eslint": "^8.57.1",
		"eslint-import-resolver-typescript": "^4.4.4",
		"eslint-plugin-import": "^2.32.0",
		"jsdom": "^28.1.0",
		"typescript": "^5.9.3",
		"vite": "^5.4.21",
		"vitest": "^4.0.18"
	},
	"dependencies": {
		"@base-ui/react": "^1.2.0",
		"@fontsource-variable/jetbrains-mono": "^5.2.8",
		"@tanstack/react-query": "^5.90.21",
		"better-sqlite3": "^12.6.2",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"cmdk": "^1.1.1",
		"electron-squirrel-startup": "^1.0.1",
		"lucide-react": "^0.567.0",
		"memjs": "^1.3.2",
		"next-themes": "^0.4.6",
		"react": "^19.2.4",
		"react-dom": "^19.2.4",
		"react-router-dom": "^7.13.0",
		"redis": "^5.11.0",
		"shadcn": "^3.8.5",
		"sonner": "^2.0.7",
		"tailwind-merge": "^3.4.1",
		"tw-animate-css": "^1.4.0",
		"uuid": "^13.0.0",
		"vaul": "^1.1.2",
		"zod": "^4.3.6",
		"zustand": "^5.0.11"
	}
}
